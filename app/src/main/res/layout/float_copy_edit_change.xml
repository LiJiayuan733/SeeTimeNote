<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="160dp"
    android:layout_height="128dp"
    android:background="@drawable/bg_float_copy"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/float_edit_ok"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_baseline_check_24"/>
    <EditText
        android:background="@drawable/bg_float_editor"
        android:id="@+id/float_edit_editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>